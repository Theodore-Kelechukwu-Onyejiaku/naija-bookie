<%- include("../partials/header") -%>
<%- include("../partials/books/take_control") %>

<div class="jumbotron my-jumbo">
    <h3>Create a Genre for yourself</h3>
</div>

<div class="container">
    <h1><%= title %></h1>
    <% var genre; var errors %>
    <div class="col-sm-12 col-md-6">
        <form action="" method="POST">
            <div class="form-group">
                <label for="name">Genre:</label>
                <% if(genre === undefined){ %>
                    <input type="text" id="name" class="form-control" placeholder="Fantasy, Poetry etc." name="name" value="">
                <% }else{ %>
                    <input type="text" id="name" class="form-control" placeholder="Fantasy, Poetry etc." name="name" value="<%= genre.name %>">
                <% }%>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>

        </form>
        <% if(errors){ %>
            <% errors.forEach((error)=>{ %>
                <span class="text-danger"><%= error.msg %></span>
            <% }) %>
        <% } %>
    </div>
</div>

<%- include("../partials/footer") -%>