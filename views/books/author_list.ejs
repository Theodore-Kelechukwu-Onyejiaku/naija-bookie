<%- include("../partials/header") %>
<%- include("../partials/books/take_control") %>


    <h1><%= title %></h1>
    <% if(author_list.length > 0){ %>
        <ul class="list-group">
            <% author_list.sort((a,b)=>{let textA = a.family_name.toUpperCase(); let textB = b.family_name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;}) %>
            <% author_list.forEach(author =>{ %>
                <li class="list-group-item">
                    <a href="<%= author.url%>"><%= author.name %></a>
                    | <%= author.lifespan %>
                    <!-- |<span><%= author.date_of_birth %> - <%= author.date_of_death %></span> -->
                </li>
            <% }) %>
        </ul>
    <% }else{ %>
        <p>Nothing Found</p>
    <% } %> 

<%- include("../partials/footer") %>